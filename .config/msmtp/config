account payflows_gmail
host smtp.gmail.com
port 587
protocol smtp
tls on
tls_starttls on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
tls_certcheck on
auth xoauth2
user guillaume@payflows.io
from guillaume@payflows.io
passwordeval "/usr/bin/python3 /home/guillaume/.local/bin/oauth2_mutt.py /home/guillaume/.local/share/pass/mail/gmail_token_thunderbird.gpg"

